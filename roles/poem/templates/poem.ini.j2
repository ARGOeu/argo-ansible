[GENERAL]
Namespace = {{ poem_namespace }}                                                                                  
Debug = {{ poem_debug }} 
TimeZone = {{ poem_timezone }}
{% if poem_SamlLoginString is defined %}
SamlLoginString = {{ poem_SamlLoginString }}
{% else %}
SamlLoginString = Log in using EGI CHECK-IN
{% endif %}

[SUPERUSER]
Name =  {{ poem_db_user }}
Password = {{ poem_db_pass }}
Email = {{ poem_db_mail }}

[SYNC]
ServiceType = {{poem_ServiceType}}
##https://goc.egi.eu/gocdbpi/private/?method=get_service_types
VO = http://operations-portal.egi.eu/xml/voIDCard/public/all/true
{% if poem_UsePlainHttpAuth is defined %}
UsePlainHttpAuth = {{ poem_UsePlainHttpAuth }}
{% else %}
UsePlainHttpAuth = False
{% endif %}
{% if poem_HttpUser is defined %}
HttpUser = {{ poem_HttpUser }}
{% else %}
HttpUser = xxxx
{% endif %}
{% if poem_HttpPass is defined %}
HttpPass = {{ poem_HttpPass }}
{% else %}
HttpPass = xxxx
{% endif %}


[SECURITY]
AllowedHosts = {{poem_ALLOWED_HOSTS}}
HostCert = {{cert_path}}
HostKey = {{cert_key_path}}
CAFile = {{cert_dir}}/DigiCertCA.crt
{% if ca_bundle %}
CAPath = /etc/grid-security/certificates/
{%endif%}
SecretKeyPath = /etc/poem/secret_key
